@using DreamsRentBack.ViewModels.Identify;
@model LoginVM
@{
    ViewData["Title"] = "Sign In";
}

<!-- main start -->
    <main>
        <section id="login">
            <div class="container">
                <div class="login-wrapper">
                    <div class="login-box">
                        <h1>Sign In</h1>
                        <p>We'll send a confirmation code to your email.</p>
                        <form asp-action="Signin" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group inputs">
                                <label asp-for="UserName">
                                    User Name
                                    <span>*</span>
                                </label>
                                <input asp-for="UserName">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group inputs">
                                <label asp-for="Password">
                                    Password
                                    <span>*</span>
                                </label>
                                <input asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <a type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="forgot">
                                Forgot Password ?
                            </a>
                            <div class="remember-me">
                                <label asp-for="RememberMe">
                                    <span>Remember me</span>
                                    <input asp-for="RememberMe">
                                    <span asp-validation-for="RememberMe" class="text-danger"></span>
                                </label>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button href="#" class="btn sign-button btn-dark">Sign In</button>
                            </div>
                            <div class="dont-have">
                                Don't have an account yet?
                                <a asp-action="ConsumerSignup">Register</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <form asp-action="ForgotPassword">
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Forgot Password?</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body row" style="padding: 30px 50px">
                            <label style="margin-bottom:15px; padding:0;">Enter email adress which u forgot password</label>
                            <input type="email" name="email" placeholder="Enter your email adress" class="col-lg-12 form-control" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn  btn-dark" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-warning" style="color:white">Send Confirm Link</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </main>
    <!-- main end -->

