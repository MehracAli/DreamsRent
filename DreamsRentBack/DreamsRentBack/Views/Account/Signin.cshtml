@using DreamsRentBack.ViewModels.Identify;
@model LoginVM
@{
    ViewData["Title"] = "Sign In";
}

<!-- main start -->
    <main>
        <section id="login">
            <div class="container">
                <div class="login-wrapper">
                    <div class="login-box">
                        <h1>Sign In</h1>
                        <p>We'll send a confirmation code to your email.</p>
                        <form asp-action="Signin" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group inputs">
                                <label asp-for="UserName">
                                    User Name
                                    <span>*</span>
                                </label>
                                <input asp-for="UserName">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group inputs">
                                <label asp-for="Password">
                                    Password
                                    <span>*</span>
                                </label>
                                <input asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <a href="#" class="forgot">
                                Forgot Password ?
                            </a>
                            <div class="remember-me">
                                <label asp-for="RememberMe">
                                    <span>Remember me</span>
                                    <input asp-for="RememberMe">
                                    <span asp-validation-for="RememberMe" class="text-danger"></span>
                                </label>
                            </div>
                            <button href="#" class="btn sign-button">Sign In</button>
                            <div class="dont-have">
                                Don't have an account yet?
                                <a asp-action="ConsumerSignup">Register</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- main end -->

