@using DreamsRentBack.Entities.ClientModels;
@using DreamsRentBack.ViewModels.Account;
@model ConsumerAccountVM
@{
    ViewData["Title"] = "My Account";
}

<style>
    .no-spinner::-webkit-inner-spin-button,
    .no-spinner::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .no-spinner {
        -moz-appearance: textfield;
    }
    .pay-card-inout{
        display:block;
        border: 1px solid #F4F4F4;
        outline: none;
        padding: 5px 10px;
        width:100%;
    }
</style>
<!-- main start -->
<main>
    <section id="account">
        <div class="container">
            <div class="profile row">
                <div class="col-lg-3">
                    <div class="photo">
                        <img src="~/assets/images/users/@Model.UserPhoto" alt="">
                        <form id="changePhotoForm" asp-action="ChangeConsumerPhoto" asp-route-Id="@Model.Id" enctype="multipart/form-data">
                            <input asp-for="iff_UserPhoto" style="display:none;" class="change-photo-input" accept="image/*" />
                        </form>
                    </div>
                    <div class="edit-photo">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </div>
                </div>
                <div class="fullname col-lg-9">
                    <h1>@Model.Name @Model.Surname</h1>
                    <h4>Consumer</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <div class="side-bar">
                        <ul class="bar-list">
                            <li id="account-detail" class="active-li">
                                Account Details
                            </li>
                            <li id="li-wishlist">
                                Wishlist
                            </li>
                            <li id="li-order-history">
                                Order History
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="main-side">
                        <div class="consumer-account account-details active-main">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="person-info">
                                        <h3>Personal Info</h3>
                                        <div class="info-body">
                                            <p>@Model.Name @Model.Surname</p>
                                            <p>@Model.Email</p>
                                            <p>@Model.PhoneNumber</p>
                                        </div>
                                        <a type="button" class="btn btn-primary edit" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                            <i class="fa-solid fa-pen"></i>
                                            Edit
                                        </a>
                                        <div class="modal fade" id="staticBackdrop" style="backdrop-filter:blur(10px);" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <form asp-action="ChangeConsumerDetails" asp-route-Id="@Model.Id">
                                                        <div class="modal-body">
                                                            <div class="form-group" style="margin-bottom:25px">
                                                                <label style="margin-bottom:5px">Fullnam <span style="color:red">*</span></label>
                                                                <div class="row">
                                                                    <div class="col-lg-6">
                                                                        <input asp-for="Name" class="col-lg-6 form-control" />
                                                                    </div>
                                                                    <div class="col-lg-6">
                                                                        <input asp-for="Surname" class="col-lg-6 form-control" />
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group" style="margin-bottom:25px">
                                                                <label style="margin-bottom:5px">Email <span style="color:red">*</span></label>
                                                                <input asp-for="Email" value="@Model.Email" type="email" class="col-lg-12 form-control" />
                                                            </div>
                                                            <div class="form-group" style="margin-bottom:25px">
                                                                <label style="margin-bottom:5px">Phone Number <span style="color:red">*</span></label>
                                                                <input asp-for="PhoneNumber" value="@Model.PhoneNumber" type="number" class="no-spinner col-lg-12 form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-warning" style="color:white;">Save</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="address-info">
                                        <h3>Payment Card</h3>
                                        @if (Model.PayCard != null)
                                        {
                                            <form>
                                                <div class="info-body">
                                                    <p>@Model.PayCard.HolderName @Model.PayCard.HolderSurname</p>
                                                    <p>XXXX-XXXX-XXXX-@Model.PayCard.CardNumber.Substring(12, 4)</p>
                                                    <p>@Model.PayCard.Date</p>
                                                </div>
                                                <a class="edit" href="#">
                                                    <i class="fa-solid fa-pen"></i>
                                                    Edit
                                                </a>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="AddDebitCard" asp-route-Id="@Model.Id">
                                                <div class="info-body">
                                                    <div class="row">
                                                        <div class="col-lg-6">
                                                            <input name="HolderName" class="pay-card-inout" type="text" placeholder="HOLDER NAME" />
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <input name="HolderSurname" class="pay-card-inout" type="text" placeholder="HOLDER SURNAME" />
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <input name="CardNumber" class="pay-card-inout cardNumber" type="text" placeholder="XXXX-XXXX-XXXX-XXXX" maxlength="19" id="cardNumber" onkeyup="formatCardNumber(this)" style="margin:10px 0;" />
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <input name="Date" class="pay-card-inout date" onkeyup="formatDate(this)" type="text" placeholder="Date" maxlength="5" style="margin:10px 0 0;" />
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <input name="cvv" class="pay-card-inout cvv" type="text" placeholder="cvv" style="margin:10px 0 0;" maxlength="3" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <button type="submit" class="edit" href="#">
                                                    Save
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
