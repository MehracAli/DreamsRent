@using DreamsRentBack.Entities.CarModels;
@using DreamsRentBack.Entities.ClientModels;
@model Company
@{
    ViewData["Title"] = "My Account";
    List<Car> cars = ViewBag.Cars;
}

<!-- main start -->
<main>
    <section id="account">
        <div class="container">
            <div class="profile row">
                <div class="col-lg-3">
                    <div class="photo" style="display:flex;justify-content:center;align-items:center;padding:15px;background:white;">
                        <img src="~/assets/images/users/@Model.CompanyPhoto" alt="">
                    </div>
                    <div class="edit-photo">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </div>
                </div>
                <div class="fullname col-lg-9">
                    <h1>@Model.CompanyName</h1>
                    <h4>Company</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <div class="side-bar">
                        <ul class="bar-list">
                            <li id="account-detail">
                                Account Details
                            </li>
                            <li id="li-announcements" class="active-li">
                                Announcements
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9" style="min-height: 300px;">
                    <div class="company-main-side">
                        <div class="account-details">
                        </div>
                        <div class="about-announcements active-main">
                            <div class="company-main-head">
                                <ul>
                                    <li class="announcements-head active-li">Announcements <span>(0)</span></li>
                                    <li class="pending-head">Pending <span>(0)</span></li>
                                    <li class="rented-head">Rented <span>(0)</span></li>
                                </ul>
                            </div>
                            <div class="company-main-body">
                                <div class="announcements-body">
                                    @if(Model.Cars == null)
                                    {
                                        <p>Announcements is empty</p>
                                        <a asp-controller="Car" asp-action="AddCar" class="btn">
                                            <i class="fa-solid fa-circle-plus"></i>
                                            Add Car
                                        </a>
                                    }
                                    <div class="row">
                                        @foreach (Car car in Model.Cars)
                                        {
                                            <div class="car-item">
                                            <div class="card">
                                                <div class="img-details">
                                                    <div class="card-img">
                                                        <a asp-controller="Detail" asp-action="CarDetail" asp-route-Id="@car.Id">
                                                            <img src="~/assets/images/cars/@car.CarPhotos.FirstOrDefault(cp=>cp.CarId == car.Id).Path" alt="">
                                                        </a>
                                                    </div>
                                                    <div class="card-details w-100">
                                                        <div class="card-body">
                                                            <div class="body-head">
                                                                <div class="title">
                                                                    <h3>
                                                                        @*<a href="#">@car.Brand.Name SE Hybrid</a>*@
                                                                    </h3>
                                                                    <h6>
                                                                        Brand:
                                                                        <span>Toyota</span>
                                                                    </h6>
                                                                </div>
                                                                <div class="price-rating">
                                                                    <div class="rating">
                                                                        <i class="fas fa-star filled"></i>
                                                                        <i class="fas fa-star filled"></i>
                                                                        <i class="fas fa-star filled"></i>
                                                                        <i class="fas fa-star filled"></i>
                                                                        <i class="fas fa-star filled"></i>
                                                                        <span>(5.0)</span>
                                                                    </div>
                                                                    <h6 class="price">
                                                                        $400
                                                                        <span>/ Day</span>
                                                                    </h6>
                                                                </div>
                                                            </div>
                                                            <div class="body-mid">
                                                                <ul>
                                                                    <li>
                                                                        <img src="~/assets/images/index/cars/car-detail/car-parts-01.svg" alt="">
                                                                        <p>Auto</p>
                                                                    </li>
                                                                    <li>
                                                                        <img src="~/assets/images/index/cars/car-detail/car-parts-02.svg" alt="">
                                                                        <p>Auto</p>
                                                                    </li>
                                                                    <li>
                                                                        <img src="~/assets/images/index/cars/car-detail/car-parts-03.svg" alt="">
                                                                        <p>Auto</p>
                                                                    </li>
                                                                    <li>
                                                                        <img src="~/assets/images/index/cars/car-detail/car-parts-04.svg" alt="">
                                                                        <p>Auto</p>
                                                                    </li>
                                                                    <li>
                                                                        <img src="~/assets/images/index/cars/car-detail/car-parts-05.svg" alt="">
                                                                        <p>Auto</p>
                                                                    </li>
                                                                    <li>
                                                                        <img src="~/assets/images/index/cars/car-detail/car-parts-06.svg" alt="">
                                                                        <p>Auto</p>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                            <div class="body-bottom">
                                                                <div class="author">
                                                                    <div class="author-img">
                                                                        <img src="~/assets/images/index/cars/car-logo/WpcTavg99b5XpK6STzSLZ8.jpg" alt="">
                                                                    </div>
                                                                    <div class="author-name-location">
                                                                        <div class="author-name">
                                                                            <h5>
                                                                                <a href="#">
                                                                                    Toyota Of Lincoln Park
                                                                                </a>
                                                                            </h5>
                                                                            <h6>
                                                                                <i class="fa-sharp fa-solid fa-location-dot"></i>
                                                                                Newyork, USA
                                                                            </h6>
                                                                        </div>
                                                                        <div class="author-location"></div>
                                                                    </div>
                                                                </div>
                                                                <div class="rent-btn">
                                                                    <a href="#" class="btn">
                                                                        <span>
                                                                            <i class="fa-solid fa-calendar"></i>
                                                                        </span>
                                                                        Rent Now
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        }
                                    </div>
                                </div>
                                <div class="pending-body d-none">
                                    <p>There is no car waiting</p>
