@using DreamsRentBack.Entities.CarModels;
@using DreamsRentBack.Entities.ClientModels;
@using DreamsRentBack.ViewModels.CarViewModels;
@model CarDetailVM
@{
    ViewData["Title"] = "CarDetail";
    List<ExtraService> extraServices = ViewBag.Services;
    List<CarFeatures> carFeatures = ViewBag.Features;
    List<User> users = ViewBag.Users;
    List<Rating> ratings = ViewBag.Ratings;
}

<!-- main start -->
<main>
    <section id="head">
        <div class="container">
            <div class="head-wrapper">
                <h2>Details</h2>
                <div class="root">
                    <ul>
                        <li>
                            <a href="./index.html">
                                Home
                            </a>
                        </li>
                        <li>
                            Details
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section id="detail-head">
        <div class="container">
            <div class="detail-head-wrapper">
                <div class="detail-head-left">
                    <div class="car-rate-info">
                        <div class="rate">
                            <span class="year" style="font-size:20px">@Model.Year</span>
                            @for (double i = 0; i < Math.Floor(Model.Rating / ratings.Where(r => r.Comment.CarId == Model.Id).Count()); i++)
                            {
                                <i class="fas fa-star filled" style="font-size:20px"></i>
                            }
                            @for (double i = 0; i < 5 - Math.Floor(Model.Rating / ratings.Where(r => r.Comment.CarId == Model.Id).Count()); i++)
                            {
                                <i class="fas fa-star filled" style="color:gray;font-size:20px"></i>
                            }
                            @if (ratings.Where(r => r.Comment.CarId == Model.Id).Count() > 0)
                            {
                                <span class="rate-point">@((Model.Rating / ratings.Where(r => r.Comment.CarId == Model.Id).Count()).ToString("F1"))</span>
                            }
                            else
                            {
                                <i class="fas fa-star filled" style="color:gray;font-size:20px"></i>
                                <i class="fas fa-star filled" style="color:gray;font-size:20px"></i>
                                <i class="fas fa-star filled" style="color:gray;font-size:20px"></i>
                                <i class="fas fa-star filled" style="color:gray;font-size:20px"></i>
                                <i class="fas fa-star filled" style="color:gray;font-size:20px"></i>
                                <span style="font-size:20px!important">(@(Model.Rating).0)</span>
                            }
                        </div>
                        <div class="info">
                            <h3>@Model.Brand.Name @Model.Brand.Models.FirstOrDefault(m=>m.Id == Model.ModelId).Name</h3>
                            <div class="car-location-view">
                                <div class="car-location">
                                    <i class="fa-sharp fa-solid fa-location-dot"></i>
                                    <span>
                                        <b>Location:</b>
                                        @Model.Location
                                    </span>
                                </div>
                                <div class="car-view">
                                    <i class="fa-solid fa-eye"></i>
                                    <span>
                                        <b>Views:</b>
                                        @Model.Views
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="detail-head-right">
                    <a href="#">
                        <i class="fa-solid fa-heart"></i>
                        Whishlist
                    </a>
                </div>
            </div>
        </div>
    </section>
    <section id="detail-body">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 body-left">
                    <div class="car-images">
                        <div class="slider-for main-img">
                            @foreach (CarPhoto photo in Model.CarPhotos)
                            {
                                <div class="item">
                                    <img src="~/assets/images/cars/@photo.Path" alt="">
                                </div>
                            }
                        </div>
                        <div class="slider-nav">
                            @foreach (CarPhoto photo in Model.CarPhotos)
                            {
                                <div class="item">
                                    <img src="~/assets/images/cars/@photo.Path" alt="">
                                </div>
                            }
                        </div>
                    </div>
                    <div class="left-components extra-service">
                        <div class="component-title">
                            <h4>Extra Service</h4>
                        </div>
                        <div class="row">
                            <ul class="col-lg-4" style="padding:0;list-style:none;">
                                @foreach (ExtraServicesAndCars servicesAndCars in Model.ServicesAndCars)
                                {
                                    @foreach (ExtraService extraService in extraServices.Take(4))
                                    {
                                        @if(extraService.ServicesAndCars.Any(sc=>sc.Id == servicesAndCars.Id))
                                        {
                                            <li>
                                                <span style="display:block;padding:5px 10px;">@extraService.Name - $@extraService.Price</span>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                            <ul class="col-lg-4" style="padding:0;list-style:none;">
                                @foreach (ExtraServicesAndCars servicesAndCars in Model.ServicesAndCars)
                                {
                                    @foreach (ExtraService extraService in extraServices.Skip(4).Take(4))
                                    {
                                        @if (extraService.ServicesAndCars.Any(sc => sc.Id == servicesAndCars.Id))
                                        {
                                            <li>
                                                <span style="display:block;padding:5px 10px;">@extraService.Name - $@extraService.Price</span>
                                            </li>
                                        }
                                    }
                                }
