                                    </div>
                                    <div class="specification-info">
                                        <span>Doors</span>
                                        <h6>@Model.Door</h6>
                                    </div>
                                </div>
                                <div class="specification col-lg-3">
                                    <div class="specification-img">
                                        <img src="~/assets/images/details/spesifications/specification-icon-11.svg" alt="">
                                    </div>
                                    <div class="specification-info">
                                        <span>Brake</span>
                                        <h6>@Model.Brake.Name</h6>
                                    </div>
                                </div>
                                <div class="specification col-lg-3">
                                    <div class="specification-img">
                                        <img src="~/assets/images/details/spesifications/specification-icon-12.svg" alt="">
                                    </div>
                                    <div class="specification-info">
                                        <span>Engine (Hp)</span>
                                        <h6>@Model.Engine.HorsePower</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="left-components car-features">
                        <div class="component-title">
                            <h4>Car Features</h4>
                        </div>
                        <div class="features-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <ul>
                                        @foreach (CarFeaturesAndCars carFeaturesAndCars in Model.FeaturesAndCars)
                                        {
                                            @foreach (CarFeatures carFeature in carFeatures.Take(4))
                                            {
                                                @if (carFeature.FeaturesAndCars.Any(sc => sc.Id == carFeaturesAndCars.Id))
                                                {
                                                    <li>
                                                        <span>
                                                            <i class="fa-solid fa-check-double"></i>
                                                        </span>
                                                        @carFeature.Name
                                                    </li>
                                                }
                                            }
                                        }
                                    </ul>
                                </div>
                                <div class="col-lg-4">
                                    <ul>
                                        @foreach (CarFeaturesAndCars carFeaturesAndCars in Model.FeaturesAndCars)
                                        {
                                            @foreach (CarFeatures carFeature in carFeatures.Skip(4).Take(4))
                                            {
                                                @if (carFeature.FeaturesAndCars.Any(sc => sc.Id == carFeaturesAndCars.Id))
                                                {
                                                    <li>
                                                        <span>
                                                            <i class="fa-solid fa-check-double"></i>
                                                        </span>
                                                        @carFeature.Name
                                                    </li>
                                                }
                                            }
                                        }
                                    </ul>
                                </div>
                                <div class="col-lg-4">
                                    <ul>
                                        @foreach (CarFeaturesAndCars carFeaturesAndCars in Model.FeaturesAndCars)
                                        {
                                            @foreach (CarFeatures carFeature in carFeatures.Skip(8).Take(4))
                                            {
                                                @if (carFeature.FeaturesAndCars.Any(sc => sc.Id == carFeaturesAndCars.Id))
                                                {
                                                    <li>
                                                        <span>
                                                            <i class="fa-solid fa-check-double"></i>
                                                        </span>
                                                        @carFeature.Name
                                                    </li>
                                                }
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="left-components description">
                        <div class="component-title">
                            <h4>Description of Listing</h4>
                        </div>
                        <div class="description-items">

                            <p>@Model.Description</p>
                        </div>
                    </div>
                    <div class="left-components reviews">
                        <div class="component-title">
                            <h4>Reviews(@Model.Comments.Count())</h4>
                        </div>
                        <div class="reviews-body" style="height:450px;overflow-y:scroll;">
                            @foreach(Comment comment in Model.Comments)
                            {
                                <div class="review">
                                <div class="review-head">
                                    <div class="person-img-info">
                                        <div class="person-img">
                                            @if(comment.User is null)
                                            {
                                                <img src="~/assets/images/users/Default_pfp.svg.png" style="border-radius:50%;border: 1px solid gray" alt="">
                                            }
                                            else
                                            {
                                                <img src="~/assets/images/users/@users.FirstOrDefault(u=>u.Id == comment.User.Id).UserPhoto" style="border-radius:50%;border: 1px solid gray" alt="">
                                            }
                                        </div>
                                        <div class="person-info">
                                            @if(comment.User is null)
                                            {
                                                <h6 class="person-name">@comment.Fullname</h6>
                                            }
                                            else
                                            {
                                                <h6 class="person-name">@users.FirstOrDefault(u=>u.Id == comment.User.Id).Name @users.FirstOrDefault(u=>u.Id == comment.User.Id).Surname</h6>
                                            }
                                            <p class="comment-add-date">@comment.CreationTime</p>
                                        </div>
                                    </div>
                                    <div class="rate-point">
                                        @for (double i = 0; i < comment.Rating.Point; i++)
                                        {
                                            <i class="fas fa-star filled"></i>
                                        }
                                        @for (int i = 0; i < 5 - comment.Rating.Point; i++)
                                        {
                                            <i class="fas fa-star filled" style="color:gray"></i>
                                        }
                                        <span>(@(comment.Rating.Point).0)</span>
                                    </div>
                                </div>
                                <div class="comment">
                                    <p>@comment.Text</p>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                    <div class="left-components add-comment">
                        <div class="component-title">
                            <h4>Leave a Comment</h4>
                        </div>
                        <div class="add-comment-body">
                            <div class="comment-from">
                                <form asp-controller="Detail" asp-action="AddComment" asp-route-Id="@Model.Id">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="add-rate">
                                        <span>Rate</span>
                                        <i class="fa-regular fa-star rate-it" onclick="fillStars(1)" style="cursor:pointer;font-size:20px;">
                                            <input asp-for="Comments.FirstOrDefault(c=>c.CarId == Model.Id).Rating.Point" type="radio" value="1" style="display:none"/>
                                        </i>
                                        <i class="fa-regular fa-star rate-it" onclick="fillStars(2)" style="cursor:pointer;font-size:20px;">
                                            <input asp-for="Comments.FirstOrDefault(c=>c.CarId == Model.Id).Rating.Point" type="radio"  value="2" style="display:none"/>
                                        </i>
                                        <i class="fa-regular fa-star rate-it" onclick="fillStars(3)" style="cursor:pointer;font-size:20px;">
                                            <input asp-for="Comments.FirstOrDefault(c=>c.CarId == Model.Id).Rating.Point" type="radio" value="3" style="display:none"/>
                                        </i>
                                        <i class="fa-regular fa-star rate-it" onclick="fillStars(4)" style="cursor:pointer;font-size:20px;">
                                            <input asp-for="Comments.FirstOrDefault(c=>c.CarId == Model.Id).Rating.Point" type="radio" value="4" style="display:none"/>
                                        </i>
                                        <i class="fa-regular fa-star rate-it" onclick="fillStars(5)" style="cursor:pointer;font-size:20px;">
                                            <input asp-for="Comments.FirstOrDefault(c=>c.CarId == Model.Id).Rating.Point" type="radio" value="5" style="display:none" />
                                        </i>
                                    </div>
                                    <div class="row">
                                        @if (!User.Identity.IsAuthenticated)
                                        {    
                                            <div class="col-lg-6 fullname form-group">
                                                <label for="#">
                                                    Fullname
                                                    <span>*</span>
                                                </label>
                                                <input asp-for="Comments.FirstOrDefault(c=>c.CarId == Model.Id).Fullname">
                                                <span asp-validation-for="Comments.FirstOrDefault(c=>c.CarId == Model.Id).Fullname" class="text-danger"></span>
                                            </div>
                                            <div class="col-lg-6 email-adress form-group">
                                                <label for="#">
                                                    Email Adress
                                                    <span>*</span>
                                                </label>
                                                <input asp-for="Comments.FirstOrDefault(c=>c.CarId == Model.Id).Email" type="email">
                                            </div>
                                        }
                                        <div class="col-lg-12 comment form-group">
                                            <label for="#">Comments</label>
                                            <textarea asp-for="Comments.FirstOrDefault(c=>c.CarId == Model.Id).Text" cols="30" rows="10"></textarea>
                                        </div>
                                    </div>
                                    <div>
                                        <button class="btn" type="submit">Submit Review</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 body-right">
