@model Brand

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPanel.cshtml";
}
<div class="container h-75" style="padding: 50px 0 0;">
    <div class="row justify-content-center w-100">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Editing Brand</h6>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-lg-4">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-lg-4">
                        <label asp-for="iff_Logo" class="control-label">Brand Logo</label>
                        <input asp-for="iff_Logo" class="form-control bg-dark" />
                        <span asp-validation-for="iff_Logo" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <div class="form-group mb-lg-4">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
                <div>
                    <a asp-action="Brands">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

