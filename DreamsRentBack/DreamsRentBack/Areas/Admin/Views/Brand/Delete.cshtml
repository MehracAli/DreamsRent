@model DreamsRentBack.Entities.CarModels.Brand

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPanel.cshtml";
}

<div class="container  h-75" style="padding: 50px 0 0;">
    <div class="row justify-content-center w-100">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Delete Brand</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Brand Name</th>
                            <th scope="col">Brand Logo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>
                                @Html.DisplayFor(model => model.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.BrandLogo)
                            </td>
                        </tr>
                    </tbody>
                </table>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-outline-primary m-2" /> |
                    <a asp-action="Brands">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>

